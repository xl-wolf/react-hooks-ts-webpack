{
  "compilerOptions": {
    "sourceMap": true, //是否生成对应的.map文件
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "paths": {
      //配合webpack中的resolve.alias才能生效
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true, //加上这两项可以直接写import React 不用写 import * as React
    "allowSyntheticDefaultImports": true //加上这两项可以直接写import React 不用写 import * as React
  },
  "include": ["./src/**/*"],
  "exclude": ["*/node_modules/*"]
}
